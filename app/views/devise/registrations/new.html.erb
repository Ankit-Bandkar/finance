<h2>Sign up</h2>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true } do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :photo %>
  <%= f.file_field :avatar, autofocus: true, autocomplete: 'avatar', class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :organization %>
  <%= f.text_field :organization_name, autofocus: true, autocomplete: 'organization_name', class: 'form-control'%>
  </div>

  <h3>Contact No</h3>
  <div id='Contact'>
    <%= f.fields_for :contacts do |contact| %>
      <%= render 'contact_fields', :f => contact %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add contact', f, :contacts %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
