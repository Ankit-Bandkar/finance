
<div class="modal-body">
<%= form_with model: @expense, local: true do |f| %>

  <div class="form-group">
    <%= f.label :Amount %>
    <%= f.number_field :amount, class:"form-control", required: "required"  %>
  </div>

  <div class="form-group">
  <%= f.label :category, "Category" %><br>
  <%= collection_select(:expense, :category_id, Category.where(category_type: "expense"), :id, :name, prompt: true) %>
  </div> 

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :entry_date, "Entry Date" %>
    <%= f.text_field :entry_date, class:"form-control", data: { provide: 'datepicker' }, 'data-date-format': "yyyy-mm-dd", required: "required" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit class:"btn btn-success" %>
  </div>

<% end %>
